{
    "compilerOptions": {
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "module": "es6",
      "moduleResolution": "node",
      "noEmit": true,
      "noImplicitAny": true,
      "outDir": "./dist/",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es5",
    },
    "include": [
      "*.ts",
      "**/*.ts",
      "**/*.tsx",
      "**/**/*.ts",
      "**/**/*.tsx",
      "**/**/**/*.tsx",
      "**/**/**/**/*.tsx"
    ],
    "exclude": ["node_modules"]
  }
